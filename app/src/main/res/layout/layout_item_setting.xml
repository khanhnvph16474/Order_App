<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bo_tron"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/avatar"
            android:text="Tên quán"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/avatar"
            android:text="Thể loại"
            android:textColor="#404040"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phạm vi"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/country"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/avatar"/>

        <ImageButton
            android:id="@+id/btnChangeQuan"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_toRightOf="@id/avatar"
            android:background="@color/white"
            app:srcCompat="@drawable/x61_more_edit" />
        <ImageButton
            android:id="@+id/btnDeleteQuan"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/btnChangeQuan"
            android:background="@color/white"
            app:srcCompat="@drawable/x6_close" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>